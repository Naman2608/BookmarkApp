<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical"
            android:background="@color/surface_dark">

            <!-- Title -->
            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Writing"
                style="@style/HeaderTitleStyle" />

            <!-- Add Button -->
            <ImageView
                android:id="@+id/addButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_input_add"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/text_primary_dark"
                android:layout_marginEnd="12dp"
                android:contentDescription="Add journal entry" />

            <!-- More Options Button -->
            <ImageView
                android:id="@+id/moreButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_menu_more"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/text_primary_dark"
                android:contentDescription="More options" />

        </LinearLayout>

        <!-- Writing List (Books with journal entries) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/writingRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="80dp" />

    </LinearLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@color/background_darker"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center">

        <!-- Book Icon (Reading Tab) -->
        <LinearLayout
            android:id="@+id/readingTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp">

            <ImageView
                android:id="@+id/readingIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_menu_agenda"
                android:tint="@color/text_secondary_dark"
                android:contentDescription="Reading" />

        </LinearLayout>

        <!-- Menu Icon (More Tab) -->
        <LinearLayout
            android:id="@+id/menuTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp">

            <ImageView
                android:id="@+id/menuIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:tint="@color/white"
                android:contentDescription="Menu" />

        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
