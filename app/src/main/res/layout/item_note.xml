<?xml version="1.0" encoding="utf-8"?>
<!-- Note Item for RecyclerView -->
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/card_dark"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Note Content -->
        <TextView
            android:id="@+id/tvNoteContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a note about the book..."
            android:textSize="14sp"
            android:textColor="@color/text_primary_dark"
            android:lineSpacingExtra="4dp"
            android:maxLines="4"
            android:ellipsize="end" />

        <!-- Bottom Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Page Number -->
            <TextView
                android:id="@+id/tvPageNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Page 45"
                android:textSize="12sp"
                android:textColor="@color/streak_red"
                android:textStyle="bold"
                android:background="@drawable/page_count_badge"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:visibility="visible" />

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="1dp" />

            <!-- Date -->
            <TextView
                android:id="@+id/tvNoteDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2h ago"
                android:textSize="12sp"
                android:textColor="@color/text_gray" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
