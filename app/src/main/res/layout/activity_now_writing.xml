<?xml version="1.0" encoding="utf-8"?>
<!-- Writing Tab - Matching design images 5 & 6 -->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="1"
            android:fontFamily="@font/anek_devanagari_bold"
            android:text="Writing"
            android:textColor="@color/text_primary_dark"
            android:textSize="34sp"
            android:textStyle="bold" />

        <!-- Add Notebook Button -->
        <ImageButton
            android:id="@+id/btnAddNotebook"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:src="@android:drawable/ic_input_add"
            android:background="@drawable/circular_button_bg"
            android:tint="@color/white"
            android:contentDescription="Add notebook" />

        <!-- More Options Button -->
        <ImageButton
            android:id="@+id/btnMoreOptions"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_more"
            android:background="@drawable/circular_button_bg"
            android:tint="@color/white"
            android:contentDescription="More options" />
    </LinearLayout>

    <!-- Notebooks RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNotebooks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="20dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:background="@color/bottom_nav_background"
        android:elevation="8dp"
        android:gravity="center"
        android:paddingHorizontal="60dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btnReadingTab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_view"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/bottom_nav_inactive"
            android:contentDescription="Reading tab" />

        <ImageButton
            android:id="@+id/btnWritingTab"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/bottom_nav_active"
            android:contentDescription="Writing tab" />
    </LinearLayout>

    <!-- FAB (Optional) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabQuickAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Quick add"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation" />

</androidx.constraintlayout.widget.ConstraintLayout>
