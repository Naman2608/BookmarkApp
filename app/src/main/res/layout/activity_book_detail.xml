<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Book Header with Red Background -->
        <RelativeLayout
            android:id="@+id/bookHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/book_header_red"
            android:padding="24dp">

            <!-- Book Cover -->
            <ImageView
                android:id="@+id/bookCoverImage"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/surface_dark"
                android:contentDescription="Book cover" />

            <!-- Book Info Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/bookCoverImage"
                android:layout_marginStart="20dp"
                android:orientation="vertical">

                <!-- Book Title -->
                <TextView
                    android:id="@+id/bookTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mahagatha"
                    android:textSize="24sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!-- Book Subtitle -->
                <TextView
                    android:id="@+id/bookSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="100 Tales from the Puranas"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:layout_marginTop="4dp"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <!-- Author Name -->
                <TextView
                    android:id="@+id/bookAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Satyarth Nayak"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Page Progress Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/surface_dark"
            android:padding="20dp"
            android:gravity="center_vertical">

            <!-- Page Count Display -->
            <TextView
                android:id="@+id/pageCountDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30/300 Pages"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/streak_red"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <!-- Progress Bar -->
            <ProgressBar
                android:id="@+id/bookProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:progressTint="@color/streak_red"
                android:progressBackgroundTint="@color/progress_background_dark"
                android:progress="10"
                android:max="100" />

            <!-- Add Pages Button -->
            <ImageView
                android:id="@+id/addPagesButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@android:drawable/ic_input_add"
                android:background="@color/fab_background"
                android:tint="@color/white"
                android:layout_marginStart="16dp"
                android:padding="8dp"
                android:contentDescription="Add pages" />

        </LinearLayout>

        <!-- Reading Streak Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/background_dark">

            <!-- Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reading"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Streak Circles Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Daily Streak -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.bookmark.app.CircularStreakView
                        android:id="@+id/dailyReadingStreak"
                        android:layout_width="90dp"
                        android:layout_height="90dp" />

                    <TextView
                        android:id="@+id/dailyStreakLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Five days of\ncontinuous reading"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary_dark"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

                <!-- Weekly Streak -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.bookmark.app.CircularStreakView
                        android:id="@+id/weeklyReadingStreak"
                        android:layout_width="90dp"
                        android:layout_height="90dp" />

                    <TextView
                        android:id="@+id/weeklyStreakLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary_dark"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Monthly Streak -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.bookmark.app.CircularStreakView
                        android:id="@+id/monthlyReadingStreak"
                        android:layout_width="90dp"
                        android:layout_height="90dp" />

                    <TextView
                        android:id="@+id/monthlyStreakLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary_dark"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Writing Streak Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/background_dark">

            <!-- Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Writing"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Writing Streak Circle -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <com.bookmark.app.CircularStreakView
                        android:id="@+id/dailyWritingStreak"
                        android:layout_width="90dp"
                        android:layout_height="90dp" />

                    <TextView
                        android:id="@+id/writingStreakLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="First Day of continuous\nwriting about my reading"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary_dark"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Reading History Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@color/background_dark">

            <!-- Yesterday -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yesterday"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

            <!-- Date History -->
            <TextView
                android:id="@+id/historyDate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6 October"
                android:textSize="16sp"
                android:textColor="@color/text_secondary_dark"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

            <TextView
                android:id="@+id/historyDate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 October"
                android:textSize="16sp"
                android:textColor="@color/text_secondary_dark"
                android:paddingTop="12dp"
                android:paddingBottom="12dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
