<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/card_background"
    android:layout_marginBottom="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <!-- Book content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Book title -->
            <TextView
                android:id="@+id/bookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Title"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textStyle="normal"
                android:maxLines="1"
                android:ellipsize="end" />

            <!-- Progress bar -->
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:progressDrawable="@drawable/progress_bar_drawable"
                android:progress="40"
                android:max="100" />

            <!-- Page count and chapter info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/pageCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="90 of 225"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/chapterInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" • Part - 2"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action button (+ or ✓) -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp">

            <!-- Circular background for action button -->
            <View
                android:id="@+id/actionButtonBackground"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_action_button"
                android:layout_centerInParent="true" />

            <!-- + icon for adding pages -->
            <ImageView
                android:id="@+id/addPagesIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@android:drawable/ic_input_add"
                android:tint="@color/white"
                android:visibility="visible" />

            <!-- ✓ icon for completed books -->
            <ImageView
                android:id="@+id/completedIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@android:drawable/ic_menu_agenda"
                android:tint="@color/white"
                android:visibility="gone" />

            <!-- Page count overlay for certain items -->
            <TextView
                android:id="@+id/pageCountOverlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="30"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>