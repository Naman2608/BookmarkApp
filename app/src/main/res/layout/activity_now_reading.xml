<?xml version="1.0" encoding="utf-8"?>
<!-- Reading Tab Screen - Matching design image 2 -->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:background="@color/surface_dark"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reading"
            android:textSize="32sp"
            android:textColor="@color/text_primary_dark"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- Add Button (circular) -->
        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:src="@android:drawable/ic_input_add"
            android:background="@drawable/circular_button_bg"
            android:tint="@color/text_primary_dark"
            android:contentDescription="Add book" />

        <!-- More Options Button (three dots) -->
        <ImageButton
            android:id="@+id/btnMore"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_more"
            android:background="@drawable/circular_button_bg"
            android:tint="@color/text_primary_dark"
            android:contentDescription="More options" />
    </LinearLayout>

    <!-- Books RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCurrentBooks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="8dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/bottom_nav_background"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Book Icon (Reading Tab) -->
        <ImageButton
            android:id="@+id/btnNavReading"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="40dp"
            android:src="@android:drawable/ic_menu_my_calendar"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/bottom_nav_icon_active"
            android:contentDescription="Reading" />

        <!-- Menu Icon (More Options) -->
        <ImageButton
            android:id="@+id/btnNavMenu"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginHorizontal="40dp"
            android:src="@android:drawable/ic_menu_view"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/bottom_nav_icon_inactive"
            android:contentDescription="Menu" />
    </LinearLayout>

    <!-- FAB for quick add (optional, can be hidden if using top button) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Add book"
        android:visibility="gone"
        app:backgroundTint="@color/accent_red"
        app:tint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
