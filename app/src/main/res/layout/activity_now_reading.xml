<?xml version="1.0" encoding="utf-8"?>
<!-- Reading Tab Screen - Matching design image 2 -->
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- Header Section -->

    <!-- Books RecyclerView -->

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_dark"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:fontFamily="@font/anek_devanagari_bold"
            android:text="Reading"
            android:textColor="@color/text_primary_dark"
            android:textSize="34sp"
            android:textStyle="bold" />

        <!-- Add Button (circular) -->
        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circular_button_bg"
            android:contentDescription="Add book"
            android:src="@drawable/add_bookmark"
            />

        <!-- More Options Button (three dots) -->
        <ImageButton
            android:id="@+id/btnMore"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/circular_button_bg"
            android:contentDescription="More options"
            android:src="@drawable/more_options"
            />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewCurrentBooks"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="80dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/background_secondary_dark"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Book Icon (Reading Tab) -->
        <ImageButton
            android:id="@+id/btnNavReading"
            android:layout_width="64dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Reading"
            android:src="@drawable/reading"
            android:tint="@color/bottom_nav_icon_active" />

        <ImageButton
            android:id="@+id/btnNavMenu"
            android:layout_width="64dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menu"
            android:src="@drawable/writing"
            android:tint="@color/bottom_nav_icon_inactive" />
    </LinearLayout>

    <!-- FAB for quick add (optional, can be hidden if using top button) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Add book"
        android:visibility="gone"
        app:backgroundTint="@color/accent_red"
        app:tint="@color/white"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
