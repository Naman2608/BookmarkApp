<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="#000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:background="@color/book_dark"
        android:orientation="horizontal"
        android:padding="16dp"
        >

        <!-- Book Cover Image -->
        <ImageView
            android:id="@+id/bookCover"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:background="@color/surface_light"
            android:contentDescription="Book cover"
            android:scaleType="centerCrop"/>

        <!-- Book Info Container -->
        <LinearLayout
            android:layout_width="229dp"
            android:layout_height="68dp"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Book Title -->
            <TextView
                android:id="@+id/bookTitle"
                style="@style/BookTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/anek_devanagari_medium"
                android:letterSpacing="0.02"
                android:lineHeight="18sp"
                android:text="Mahagatha"
                android:textSize="20sp" />

            <!-- Author Name -->
            <TextView
                android:id="@+id/bookAuthor"
                style="@style/BookAuthorStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/anek_devanagari_medium"
                android:text="Satyarth Nayak"
                android:textSize="14sp"
                app:lineHeight="14sp" />

            <!-- Progress Bar Container -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:max="100"
                    android:progress="40"
                    android:progressBackgroundTint="@color/black"
                    android:progressTint="@color/streak_red" />

            </RelativeLayout>

        </LinearLayout>

        <!-- Circular Streak Indicator -->
        <com.bookmark.app.CircularStreakView
            android:id="@+id/circularStreak"
            android:layout_width="68dp"
            android:layout_height="69dp"
            android:layout_marginStart="16dp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
